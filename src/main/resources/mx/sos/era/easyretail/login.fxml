<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane styleClass="login-box" stylesheets="@css/login.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mx.sos.era.easyretail.ui.controller.LoginController">

    <!-- Barra superior con botones de ventana -->
    <top>
        <HBox spacing="8" styleClass="window-bar">
            <Label fx:id="btnMinimize" onMouseClicked="#handleMinimize" styleClass="window-button" text="—" />
            <Label fx:id="btnClose" onMouseClicked="#handleClose" styleClass="window-button" text="✕" />
        </HBox>
    </top>

    <!-- Contenido principal centrado -->
    <center>
        <VBox alignment="CENTER" spacing="15">

            <Label styleClass="login-title" text="Easy Retail" />
            <Label styleClass="login-subtitle" text="Inicia sesión con tus credenciales" />
            <Label fx:id="lblMessage" styleClass="login-message" text="¡Nos alegra tenerte de vuelta!" />

            <VBox spacing="5">
                <Label styleClass="input-label" text="Usuario" />
                <TextField fx:id="usuarioField" promptText="SUPERVISOR" styleClass="input-field" />
            </VBox>

            <VBox spacing="5">
                <Label styleClass="input-label" text="Contraseña" />

                <HBox alignment="CENTER_LEFT" spacing="2">
                    <PasswordField fx:id="passwordField" promptText="Contraseña" styleClass="input-field" HBox.hgrow="ALWAYS" />
                    <TextField fx:id="visiblePasswordField" managed="false" promptText="Contraseña" styleClass="input-field,visible-password" visible="false" HBox.hgrow="ALWAYS" />
                    <Button fx:id="btnTogglePassword" focusTraversable="false" onAction="#onTogglePassword" styleClass="eye-button,icon" />
                </HBox>
            </VBox>

            <Button fx:id="loginButton" defaultButton="true" onAction="#handleLogin" styleClass="login-button" text="Iniciar sesión" />

        </VBox>
    </center>
</BorderPane>
