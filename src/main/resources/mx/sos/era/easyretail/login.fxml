<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15" styleClass="login-box" stylesheets="@css/login.css"
      xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="mx.sos.era.easyretail.ui.controller.LoginController">

    <Label styleClass="login-title" text="Easy Retail" />
    <Label styleClass="login-subtitle" text="Inicia sesión con tus credenciales" />
    <Label fx:id="lblMessage" styleClass="login-message" text="¡Nos alegra tenerte de vuelta!" />

    <VBox spacing="5">
        <Label styleClass="input-label" text="Usuario" />
        <TextField fx:id="usuarioField" promptText="SUPERVISOR" styleClass="input-field" />
    </VBox>

    <VBox spacing="5">
        <Label styleClass="input-label" text="Contraseña" />

        <!-- HBox que contiene el PasswordField, el TextField (visible cuando se activa) y el botón ojo -->
        <HBox spacing="6" alignment="CENTER_LEFT">
            <!-- PasswordField por defecto visible -->
            <PasswordField fx:id="passwordField" promptText="Contraseña" styleClass="input-field" HBox.hgrow="ALWAYS"/>

            <!-- TextField para mostrar la contraseña en texto claro; inicialmente invisible -->
            <TextField fx:id="visiblePasswordField" promptText="Contraseña" styleClass="input-field" visible="false" managed="false" HBox.hgrow="ALWAYS"/>

            <!-- Botón ojo; puedes usar texto, unicode o una clase CSS para icono -->
            <Button fx:id="btnTogglePassword" styleClass="eye-button" onAction="#onTogglePassword" focusTraversable="false" />
        </HBox>

        <Hyperlink styleClass="forgot-link" text="¿Olvidaste tu contraseña?" />
    </VBox>

    <Button fx:id="loginButton" styleClass="login-button" text="Iniciar sesión" onAction="#handleLogin" defaultButton="true"/>

</VBox>